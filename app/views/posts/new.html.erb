


<div class="introCheese">
    <div class="contentCheese">
        <h4>New post</h4>
        <%= form_for :post, url: posts_path, local: true do |f| %>
            <% if @post.errors.any? %>
                <% @post.errors.full_messages.each do |err| %>
                    <div class="alert alert-danger"><%= err %></div>
                <% end %>
            <% end %>
            <p>
                Name<br>
                <%= f.text_field(:title, {:class => 'form-control'}) %>
            <p>
            <p>
                Article<br>
                <%= f.hidden_field(:body, {:class => 'form-control'}) %>
            <p>
            <trix-editor input="post_body"></trix-editor>
            <p>
                <%= f.submit({:class => 'btn btn-success'}) %>
            <p>
        <% end %>
    </div>
</div>